    "concurrently": "^5.2.0",
    "coveralls": "^3.1.0",
    "eth-gas-reporter": "^0.2.17",
    "solidity-coverage": "^0.7.5",
    "truffle": "^5.1.28"
  },
  "dependencies": {}
}
