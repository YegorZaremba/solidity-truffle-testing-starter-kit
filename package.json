{
  "name": "solidity-truffle-testing-starter-kit",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "truffle test",
    "test:gasless": "concurrently --kill-others \"npm run ganache\" \"truffle test --network=unlimited_gas\"",
    "ganache": "ganache-cli --port=9545 --gasLimit=0x1fffffffffffff --allowUnlimitedContractSize -e 1000000000 --gasPrice=1",
    "coverage": "truffle run coverage",
    "coverage-report": "truffle run coverage && cat coverage/lcov.info | coveralls"
  },
